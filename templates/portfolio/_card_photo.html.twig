<div class="card card-photo card-small card-hover">
    <div class="card__img">
        <img src="{{ vich_uploader_asset(image, 'imageFile') | imagine_filter('thumbnail400x400')}}" alt="{{ image.alt }}" loading="lazy">
        <div class="card__cta">
            <div class="stack">
                {% for album in image.albums %}
                    <div class="pill pill-primary">{{ album.name }}</div>
                {% endfor %}
            </div>
        </div>
    </div>
    <a class="card__link" href="{{ path('portfolio_show', {'id': image.id}) }}" aria-label="voir la photo"></a>
</div>