{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block page__title %}Reset your password{% endblock %}

{% block page__content %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {{ form_start(requestForm, {'attr': {'class': 'stack-column min-container'}}) }}
        <div class="input-group">
            {{ form_label(requestForm.email) }}
            {{ form_help(requestForm.email) }}
            {{ form_widget(requestForm.email) }}
            <div class="input-error">
                {{ form_errors(requestForm.email) }}
            </div>
        </div>

        <div class="form-submit">
            <button class="button-primary">Send password reset email</button>
        </div>
    {{ form_end(requestForm) }}
{% endblock %}
