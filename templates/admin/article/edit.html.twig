{% extends 'base.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block page__title %}Edit Article{% endblock %}

{% block page__desc %}
    <a href="{{ path('admin_article_index') }}" class="button button-cancel">{{ icon('back-arrow') }}Back to list</a>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('article_show', {'slug': article.slug}) }}" class="button">{{ icon('view') }}</a>
        {{ include('admin/article/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}

{% block page__content %}
    {{ include('admin/article/_form.html.twig', {'button_label': 'Update'}) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('articleEditor') }}
{% endblock %}
