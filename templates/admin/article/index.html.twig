{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
<div class="container">
    <h1 class="page__title">Columns</h1>
    {% if is_granted('ROLE_ADMIN') %}<a href="{{ path('admin_article_new') }}">New</a>{% endif %}
    <div class="min-container stack-column js-filter">
        <div class="js-filter-content">
            {% for article in articles %}
            <div class="card">
                <div class="card__header">
                    <div class="card__title">{{ article.title }}</div>
                </div>
                {% if article.heroImageUrl %}
                <div class="card__img">
                    <img src="{{ article.heroImageUrl }}" alt="card image">
                </div>
                {% endif %}
                <div class="card__body">
                    <div class="card__description">{{ article.kicker }}</div>
                </div>
                {% if article.topics|length > 0 %}
                <div class="card__footer">
                    <div class="stack">
                        {% for topic in article.topics %}
                            <div class="pill pill-primary">{{ topic.name }}</div>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                <div class="card__footer card__admin">
                    <a href="{{ path('admin_article_edit', {'id': article.id}) }}" class="button">&#128394;&#65039;</a>
                    {{ include('admin/article/_delete_form.html.twig') }}
                </div>
                {% endif %}
                <a class="card__link" href="{{ path('admin_article_show', {'id': article.id}) }}"></a>
            </div>
            {% endfor %}
        </div>
        <div class="d-flex x-center y-center js-filter-pagination">
            {% include "article/_pagination.html.twig" %}
        </div>
    </div>
</div>
{% endblock %}