{% extends 'base.html.twig' %}

{% block title %}Manage Articles{% endblock %}

{% block page__title %}Manage Articles{% endblock %}

{% block page__desc %}
    <p>Currently {{ count }} articles</p>
    {% if is_granted('ROLE_ADMIN') %}
        <div class="d-flex">
            <a class="button button-primary" href="{{ path('admin_article_new') }}">{{ icon('add') }}<span class="icon-label ">New Article</span></a>
            <a class="button" href="{{ path('admin_portfolio_index') }}">Media</a>
        </div>
    {% endif %}
{% endblock %}

{% block page__content %}
<section class="stack-column">
    {% for article in articles %}
        {% include "admin/article/_card_admin.html.twig" %}
    {% endfor %}
</section>
<section class="d-flex x-center y-center">
{{ knp_pagination_render(articles) }}
</section>
{% endblock %}