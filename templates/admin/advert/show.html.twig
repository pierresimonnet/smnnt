{% extends 'base.html.twig' %}

{% block title %}Advertisement{% endblock %}

{% block page__title %}Edit Advertisement{% endblock %}

{% block page__desc %}
<div class="stack">
    <a href="{{ path('app_advertisement_index') }}" class="button button-cancel">{{ icon('back-arrow') }}Back to list</a>
    {% if is_granted('ROLE_ADMIN') %}
        <div class="article-status article-status-{{ advertisement.active ? "online" : "draft" }}">{{ advertisement.active ? "Active" : "Inactive" }}</div>
        <a href="{{ path('app_advertisement_edit', {'id': advertisement.id}) }}" class="button">{{ icon('edit') }}</a>
        {{ include('admin/advert/_delete_form.html.twig') }}
    {% endif %}
</div>
{% endblock %}

{% block page__content %}
<div class="announce_admin announce-show">
    <div class="announce-show__grid">
        <div class="announce-preview">
            <div class="adslot_container">
                {{ include('admin/advert/advert.html.twig') }}
            </div>
        </div>
        <div class="announce-details">
            <ul>
                <li><strong>Name</strong>&nbsp;{{ advertisement.name }}</li>
                <li><strong>Advertiser</strong>&nbsp;{{ advertisement.advertiser }}</li>
                <li><strong>Logo</strong>&nbsp;{% if advertisement.logo %}<img src="{{ advertisement.logo }}" alt="logo" class="announce_logo" width="22" height="22">{% endif %}</li>
                <li><strong>Landing Page</strong>&nbsp;{{ advertisement.landingPage }}</li>
                <li><strong>CTA</strong>&nbsp;{{ advertisement.cta }}</li>
                <li><strong>Title</strong>&nbsp;{{ advertisement.title }}</li>
                <li><strong>Description</strong>&nbsp;{{ advertisement.description }}</li>
                <li><div class="stack">{% for adslot in advertisement.adslots %}<div class="pill pill-primary">{{ adslot.name }}</div>{% endfor %}</div></li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}