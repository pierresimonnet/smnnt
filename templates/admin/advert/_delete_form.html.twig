<form method="post" action="{{ path('app_advertisement_delete', {'id': advertisement.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="delete-form">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ advertisement.id) }}">
    <div class="form-submit">
        <button type="submit">{{ icon('trash') }}</button>
    </div>
</form>
